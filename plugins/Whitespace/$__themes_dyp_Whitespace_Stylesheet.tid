.jd-edit-title-controls .tc-btn-invisible:hover,
.jd-sidebar .tc-btn-invisible:hover,
.jd-sidebar-column .tc-btn-invisible:hover {
    fill: <<colour sidebar-controls-foreground-hover>>;
}


