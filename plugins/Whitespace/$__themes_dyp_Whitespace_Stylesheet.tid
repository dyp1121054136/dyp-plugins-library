    min-width: 0 !important;
    width: 20% !important;
    text-align: center;
}

.jd-buttons > .tc-btn-invisible {
    margin: 5px 0;
    outline: none;
    fill: <<colour sidebar-controls-foreground>>;
    <<transition "fill 150ms ease-in-out">>
}

.jd-buttons > .tc-btn-invisible:hover {
    fill: <<colour sidebar-controls-foreground-hover>>;
}

